<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/main_theme_primary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/main_theme_primary_dark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/main_theme_accent</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme"/>
    <style name="AppTheme.SettingsActivity"/>

    <style name="ElevatedListStyle">
        <item name="android:background">@drawable/elevated_list_background</item>
    </style>

</resources>
