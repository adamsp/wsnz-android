<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="speakman.whatsshakingnz" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".WhatsShakingApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCm2fbOKC38SFcpuC5vRRUOIhlsObb4Eog" />

        <activity
            android:name=".ui.activities.DetailActivity"
            android:label="@string/title_activity_detail"
            android:theme="@style/AppTheme.DetailActivity" />

        <activity
            android:name=".ui.activities.MapActivity"
            android:label="@string/title_activity_map"
            android:theme="@style/AppTheme.MapActivity" />

        <activity
            android:name=".ui.activities.SettingsActivity"
            android:label="@string/title_activity_map"
            android:theme="@style/AppTheme.SettingsActivity" />

        <service
            android:name=".network.NetworkRunnerService"
            android:exported="false" />

        <service
            android:name=".network.SyncService"
            android:exported="true"
            android:permission="com.google.android.gms.permission.BIND_NETWORK_TASK_SERVICE">
            <intent-filter>
                <action android:name="com.google.android.gms.gcm.ACTION_TASK_READY" />
            </intent-filter>
        </service>
    </application>

</manifest>
