<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light"/>

    <style name="Theme.Styled" parent="Theme.Sherlock.Light.DarkActionBar"></style>

    <!-- http://developer.android.com/design/style/metrics-grids.html -->
    <!-- http://developer.android.com/design/style/typography.html -->
    <style name="ListFont">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListFont.Magnitude">
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="ListFont.Primary">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="ListFont.Secondary">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">#777</item>
    </style>

    <style name="AboutActivityFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="AboutActivityFont.Heading">
        <item name="android:textColor">#7F7F7F</item>
    </style>

    <style name="AboutActivityFont.Detail"></style>

    <style name="QuakeActivityFont">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="QuakeActivityFont.Heading">
        <item name="android:textColor">#7F7F7F</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">2dp</item>
    </style>

    <style name="QuakeActivityFont.Heading.Weighted">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="QuakeActivityFont.Detail">
        <item name="android:textSize">24sp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="QuakeActivityFont.Detail.Weighted">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>