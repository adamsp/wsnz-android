<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light"/>

    <style name="Theme.Styled" parent="Theme.Sherlock.Light.DarkActionBar"></style>

    <style name="ListFont">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ListFont.Magnitude">
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingRight">@dimen/padding_medium</item>
    </style>

    <style name="ListFont.NonMagnitude">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="AboutActivityFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="AboutActivityFont.Heading">
        <item name="android:textColor">#7F7F7F</item>
    </style>

    <style name="AboutActivityFont.Detail"></style>

    <style name="QuakeActivityFont">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="QuakeActivityFont.Heading">
        <item name="android:textColor">#7F7F7F</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">2dp</item>
    </style>

    <style name="QuakeActivityFont.Heading.Weighted">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="QuakeActivityFont.Detail">
        <item name="android:textSize">24sp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="QuakeActivityFont.Detail.Weighted">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>