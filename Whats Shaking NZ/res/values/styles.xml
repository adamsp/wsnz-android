<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.Sherlock.Light"/>

    <!-- http://developer.android.com/design/style/metrics-grids.html -->
    <!-- http://developer.android.com/design/style/typography.html -->
    <style name="ListFont">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListFont.Magnitude">
        <item name="android:textSize">@dimen/list_row_item_magnitude_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/list_row_item_magnitude_layout_width</item>
        <item name="android:layout_height">@dimen/list_row_item_magnitude_layout_height</item>
        <item name="android:layout_margin">@dimen/list_row_item_magnitude_layout_margin</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="ListFont.Primary">
        <item name="android:textSize">@dimen/list_row_item_primary_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_row_item_primary_layout_height</item>
        <item name="android:layout_marginTop">@dimen/list_row_item_primary_layout_margin_top</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="ListFont.Secondary">
        <item name="android:textSize">@dimen/list_row_item_secondary_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_row_item_secondary_layout_height</item>
        <item name="android:layout_marginBottom">@dimen/list_row_item_secondary_layout_margin_bottom</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="AboutActivityFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/about_page_text_padding</item>
    </style>

    <style name="AboutActivityFont.Heading">
        <item name="android:textColor">#7F7F7F</item>
    </style>

    <style name="AboutActivityFont.Detail"></style>

    <style name="QuakeActivityFont">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="QuakeActivityFont.Heading">
        <item name="android:textColor">#7F7F7F</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">2dp</item>
    </style>

    <style name="QuakeActivityFont.Heading.Weighted">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="QuakeActivityFont.Detail">
        <item name="android:textSize">24sp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="QuakeActivityFont.Detail.Weighted">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>